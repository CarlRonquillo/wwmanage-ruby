<main>
<div class="container-fluid">
<center>

<div class="panel panel-primary" style="width: 30rem;">
	<div class="panel-heading">
		<h4><p>Work & Witness <strong class="text-warning">Manage</strong></p></h4><hr>
		<h3>Sign In</h3>
	</div>
	<div class="panel-body"><br>
		<%= form_for(:post, url: dashboard_path, html: {class: "form-horizontal"}) do |f| %>
			<fieldset>
				<div class="form-group">
					<%= f.label(:username,"Username:", class: 'col-lg-3 control-label') %>
					<div class="col-lg-9">
						<%= f.text_field(:username, class: 'form-control') %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label(:password,"Password:", class: 'col-lg-3 control-label') %>
					<div class="col-lg-9">
						<%= f.password_field(:password, class: 'form-control') %>
					</div>
				</div><br>
				<div class="form-group col-lg-9">
					<%= f.submit("SUBMIT",class:'btn btn-primary btn-block') %>
				</div>
			</fieldset>
		<% end %>
	</div>
</div><br><br><br>

</center>
</div>
</main>